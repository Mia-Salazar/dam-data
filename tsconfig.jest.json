{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES6",
    "jsx": "react-jsx",
    "types": ["jest", "node"],
    "esModuleInterop": true,
    "allowJs": true,
    "isolatedModules": false
